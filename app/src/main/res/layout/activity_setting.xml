<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ucast.jnidiaoyongdemo.SettingActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:id="@+id/upload_pic_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传图片的host："
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:id="@+id/upload_pic_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/upload_pic_tv"
        />
    <TextView
        android:id="@+id/heart_beat_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="心跳的host："
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/upload_pic_edt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:id="@+id/heart_beat_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/heart_beat_tv"
        />

    <Button
        android:id="@+id/set_host_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改"
        android:textColor="#fff"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/heart_beat_edt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_moneyMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="钱箱参数设置"
        app:layout_constraintTop_toBottomOf="@id/set_host_btn"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/moneybox_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_moneyMsg"
        app:layout_constraintRight_toLeftOf="@id/moneybox_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/moneybox_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textColor="#fff"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_moneyMsg"
        app:layout_constraintLeft_toRightOf="@id/moneybox_ed"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_set_ptinter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择打印纸张类型"
        app:layout_constraintTop_toBottomOf="@id/moneybox_ed"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <RadioGroup
        android:id="@+id/select_papper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_set_ptinter"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <RadioButton
            android:id="@+id/papper_80"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="80毫米的打印纸"
            />
        <RadioButton
            android:id="@+id/papper_58"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="58毫米的打印纸"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_open_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否开启日志记录"
        app:layout_constraintTop_toBottomOf="@id/select_papper"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <Switch
        android:id="@+id/st_open_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/select_papper"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        />

</android.support.constraint.ConstraintLayout>
